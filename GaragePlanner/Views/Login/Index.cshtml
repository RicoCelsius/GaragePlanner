@model GaragePlanner.Models.LoginViewModel

<form method="post">
    <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required>
        <div class="invalid-feedback">@Html.ValidationMessageFor(model => model.Email)</div>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="Password" value="@Model.Password" required>
        <div class="invalid-feedback">@Html.ValidationMessageFor(model => model.Password)</div>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>
</form>