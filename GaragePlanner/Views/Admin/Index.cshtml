<!DOCTYPE html>
<html>
<head>
    <title>Admin Page</title>
</head>
<body>
<h1>Car Brands Admin</h1>
    
<h2>Existing Brands</h2>
<ul>
    @foreach (var brand in Model.Brands)
    {
        <li>@brand</li>
    }
</ul>
    
<h2>Add Brand</h2>
    <form method="post" action="@Url.Action("AddBrand", "Admin")">
    <label for="AddBrandName">Brand Name:</label>
    <input type="text" id="AddBrandName" name="AddBrandName" required>
    <input type="submit" value="Add Brand">
</form>
    
<h2>Delete Brand</h2>
    <form method="post" action="@Url.Action("DeleteBrand", "Admin")">
    <label for="DeleteBrandName">Select Brand:</label>
    <select id="DeleteBrandName" name="DeleteBrandName" required>
        @foreach (var brand in Model.Brands)
        {
            <option value="@brand">@brand</option>
        }
    </select>
    <input type="submit" value="Delete Brand">
</form>
</body>
</html>