@model GaragePlanner.Models.BookViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Appointment Confirmation</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<h1>Appointment Confirmation</h1>

<p>Thank you for booking your appointment with us! Please review the appointment details below:</p>

<table>
    <tr>
        <td>Customer Email:</td>
        <td>@Model.SelectedEmail</td>
    </tr>
    <tr>
        <td>Type of Appointment:</td>
        <td>@Model.SelectedTypeOfAppointment</td>
    </tr>
    <tr>
        <td>Chosen Date:</td>
        <td>@Model.ChosenDate</td>
    </tr>
    <tr>
        <td>Chosen Time:</td>
        <td>@Model.ChosenTime</td>
    </tr>
</table>

</body>
</html>